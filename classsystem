#include<iostream>
#include<string>
using namespace std;
int stuCount;
struct Student{
        char name[20];
        string id;
        char chooseClass;
        int grade;
}student[300];

void list();
void ChooseSubject();
void DropSubject();
void InputGrade();
int find(string);

int main(){
        int action;
      do{
        cout<<"1 查看学生名单"<<endl;
        cout<<"2 选课(添加学生)"<<endl;
        cout<<"3 推选（删除学生）"<<endl;
        cout<<"4 输入成绩"<<endl;
        cout<<"5 退出程序"<<endl;
        cout<<"***********请操作***********"<<endl<<endl;
		cin>>action;
     
                switch (action){
                case 1:
                        list();
                        break;
                case 2:
                        ChooseSubject();
                        break;
                case 3:
                        DropSubject();
                        break;
                case 4:
                        InputGrade();
                        break;
                case 5:
                        return 0;
                default:
                        cout<<"输入错误"<<endl;
                        break;
               }
		}while (1);
}

void list(){
        cout<<"学生姓名\t"<<"学号 \t\t"<<"是否选课 \t"<<"学生成绩"<<endl;
        for (int i = 0; i < stuCount; i++)
        {
                cout<<student[i].name<<"  \t";
                cout<<student[i].id<<"\t\t";
                cout<<student[i].chooseClass<<"\t\t\t\t";
                cout<<student[i].grade<<endl;
        }
                cout<<"********************************"<<endl<<endl;
}

void ChooseSubject(){
        struct Student studenttemp;
        studenttemp.chooseClass='N';
        studenttemp.grade=0;
        cout<<"请输入学生姓名"<<endl;
        cin>>studenttemp.name;
        cout<<"请输入学生学号"<<endl;
        cin>>studenttemp.id;
        cout<<"请输入学生是否选课(Y/N)"<<endl;
        cin>>studenttemp.chooseClass;
        int i=0;
        i=find(studenttemp.id);
        if (i==stuCount)
        {
                strcpy(student[i].name,studenttemp.name);
                student[i].id=studenttemp.id;
                student[i].chooseClass=studenttemp.chooseClass;
                stuCount++;
        }
        else
        {
                cout<<"ERROE!"<<endl;
                }
}

void DropSubject(){
        int i;
		string j;
		char l;
        cout<<"请输入学生学号"<<endl;
        cin>>j;
        i=find(j);
        if(i>=stuCount)
                cout<<"您输入的学号有误"<<endl;
        else
                {
        cout<<"请核对学生信息"<<endl;
        cout<<student[i].name<<endl;
        cout<<student[i].id<<endl;
        cout<<student[i].chooseClass<<endl;
        cout<<student[i].grade<<endl;
        cout<<"确认退选（Y/N）"<<endl;
        cin>>l;
                if(l=='Y'){
                        student[i].chooseClass=0;
                        student[i].grade=0;
                        }
                }
}

inline void InputGrade(){
        int i;
		string j;
		char l,n='Y';
        
        do
        {
                cout<<"请输入学生学号"<<endl;
                cin>>j;
                i=find(j);
                if(i>=stuCount)
                        cout<<"您输入的学号有误"<<endl<<endl;
                else
                {
                        cout<<"请核对学生信息"<<endl;
                        cout<<student[i].name<<endl;
                        cout<<student[i].id<<endl;
                        cout<<student[i].chooseClass<<endl;
                        cout<<student[i].grade<<endl;
                        cout<<"确认添加成绩(Y/N)"<<endl;
                        cin>>l;
                if(l=='Y'){
                        int n;
                        cout<<"请输入成绩"<<endl;
                        cin>>n;
                        student[i].grade=n;
                        }
                }
                cout<<"是否继续添加成绩(Y/N)"<<endl;
                cin>>n;
        }while(n='Y');
}

int find(string b){
        int m;
        for (m = 0; m < stuCount; m++)
        {
                if(!strcmp(student[m].id.c_str(),b.c_str()))
                        break;
        }
        return m;
}
